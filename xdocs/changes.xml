<?xml version="1.0"?>
<document>
	<properties>
		<title>Changes</title>
		<author email="trustin@apache.org">Trustin Lee</author>
	</properties>

	<body>
		<!-- action types are add/update/fix/remove -->
		<release version="0.7.2" date="2005-06-08">
		    <action dev="trustin" type="add">
		        More JavaDoc
		    </action>
		    <action dev="trustin" type="add">
		        Users can get SSLSession using SSLFilter.getSSLSession()
		    </action>
		    <action dev="trustin" type="update">
                DemuxingProtocolHandler.(de)registerMessageType() is now public.
		    </action>
			<action dev="trustin" type="fix">
			    NullPointerException in SocketIoProcessor
			</action>
			<action dev="trustin" type="fix">
			    ProtocolHandler.sessionCreated() is not invoked.
			</action>
			<action dev="trustin" type="fix">
			    DatagramSssion.close(true) can block forever.
			</action>
			<action dev="trustin" type="fix">
                Selectors once opened by acceptors and connectors are not released.
			</action>
			<action dev="trustin" type="fix">
			    SSLFilter doesn't throw SSLExceptions correctly.
			</action>
			<action dev="trustin" type="fix">
			    SSLHandler doesn't set client auth params correctly.
			</action>
			<action dev="trustin" type="fix">
			    DemuxingProtocolCodecFactory.doDecode() is called once more after the buffer becomes empty. 
			</action>
		</release>
		<release version="0.7.1" date="2005-05-17">
		    <action dev="trustin" type="add">
		        MessageEncoderFactory and MessageDecoderFactory
		    </action>
			<action dev="trustin" type="fix">
			    SSLFilter doesn't work if other IoFilters exist in the same filter chain.
			</action>
			<action dev="trustin" type="fix">
			    SSLFilter doesn't work if added after sessionOpened() is fired.
			</action>
			<action dev="trustin" type="fix">
			    Broken site links
			</action>
		</release>
		<release version="0.7" date="2005-05-07">
			<action dev="trustin" type="add">
			    The first release.
			</action>
		</release>
	</body>
</document>
